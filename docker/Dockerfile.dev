FROM node:23-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable pnpm

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Copy scripts and lib directories for postinstall script
COPY scripts ./scripts
COPY src/lib ./src/lib

# Install dependencies (set DOCKER_BUILD to skip postinstall environment setup)
RUN DOCKER_BUILD=1 pnpm install

# Copy source code (this will be overridden by volume mounts)
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]